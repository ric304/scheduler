# --- Django ---
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=dev-only-insecure-secret
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# --- DB ---
# ローカル開発は docker compose の Postgres を想定
DATABASE_URL=postgres://postgres:postgres@localhost:5432/scheduler

# --- Scheduler ---
SCHEDULER_NODE_ID=
SCHEDULER_REDIS_URL=redis://localhost:6379/0
SCHEDULER_GRPC_HOST=127.0.0.1
SCHEDULER_GRPC_PORT=50051

# 設計で固定（本番K8s）: /etc/scheduler/tls/tls.crt, /etc/scheduler/tls/tls.key
# 開発(WSL)例: /mnt/c/vscode/Scheduler/dev-certs/tls.crt
SCHEDULER_TLS_CERT_FILE=
SCHEDULER_TLS_KEY_FILE=
